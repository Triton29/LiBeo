<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
	<ribbon>
		<tabs>
			<tab id="LiBeoTab"
			   label="LiBeo">
				<group id="FastActionsGroup"
					   label="Schnell-Aktionen">
					<button id="AutoSort"
							label="Automatisch einsortieren"
							size="large"
							onAction="AutoSort_Click"
							imageMso="AdvancedFilterDialog"/>
					<button id="ManualSort"
							label="Manuell einsortieren"
							size="large"
							onAction="ManualSort_Click"
							imageMso="GroupSortFilter"/>
					<button id="QuickAccessList"
							label="Mit Schnellzugriffsliste einsortieren"
							size="large"
							onAction="CreateDir_Click"
							imageMso="SortSelectionMenu"/>
					<button id="MoveToTray"
							label="In Ablage verschieben"
							size="large"
							onAction="MoveToTray_Click"
							imageMso="MoveToFolderFileMenu"/>
				</group>
				<group id="OtherActionsGroup"
					   label="Andere Aktionen">
					<button id="SyncFolderStructure"
							label="Ordnerstruktur synchronisieren"
							onAction="SyncFolderStructure"/>
					<button id="SyncStopWords"
							label="Stop Words synchronisieren"
							onAction="SyncStopWords"/>
					<button id="MoveFolder"
							label="Ordner verschieben"
							onAction="MoveFolder"/>
					<button id="SearchFolder"
							label="Ordner suchen"
							onAction="SearchFolder"/>
					<button id="RenameFolder"
							label="Ordner umbenennen"
							onAction="RenameFolder"/>
				</group>
				<group id="InfoGroup"
						 label="Einstellungen">
					<button id="Settings"
							label="Add-In Einstellungen"
							size="large"
							onAction="AddInSettings"
							imageMso="ControlToolboxOutlook"/>
					<button id="Info"
							label="Add-In Info"
							size="large"
							onAction="AddInInfo"
							imageMso="Info"/>
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>

