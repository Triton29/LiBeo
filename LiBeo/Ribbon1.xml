<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
	<ribbon>
		<tabs>
			<tab id="LiBeoTab"
			   label="LiBeo">
				<group id="ActionsGroup"
					   label="Aktionen">
					<button id="AutoMove"
							label="Automatisch verschieben"
							size="large"
							onAction="Actions"/>
					<button id="ManualMove"
							label="Manuell verschieben"
							size="large"/>
					<button id="CreateDir"
							label="Ordner erstellen und verschieben"
							size="large"/>
				</group>
				<group id="InfoGroup"
						 label="Hilfe">
					<button id="Info"
							label="Add-In Info"
							size="large"
							onAction="AddInInfo"/>
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>

